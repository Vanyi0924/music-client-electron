{
  "name": "ld-music",
  "private": false,
  "version": "1.0.0",
  "main": "output/dist/main/main.js",
  "author": "vanyi0924",
  "description": "律动音乐",
  "scripts": {
    "dev": "node scripts/load-config.mjs && npm run build:main:dev && node scripts/dev.mjs",
    "web": "vite",
    "build": "node scripts/load-config.mjs && npm run build:main:prod && npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:main:dev": "cross-env NODE_ENV=development node scripts/build-main.mjs",
    "build:main:prod": "cross-env NODE_ENV=production node scripts/build-main.mjs",
    "build:electron": "electron-builder"
  },
  "dependencies": {
    "@music/common": "link:../music-common-module/dist",
    "ant-design-vue": "^3.2.20",
    "axios": "^1.3.4",
    "electron-updater": "^5.0.5",
    "fs-extra": "^10.1.0",
    "less-loader": "^11.1.0",
    "lowdb": "1.0.0",
    "pinia": "^2.0.33",
    "vue": "^3.2.45",
    "vue-router": "4",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1",
    "workerpool": "^6.2.1"
  },
  "devDependencies": {
    "@types/lowdb": "^1.0.11",
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.2",
    "@types/workerpool": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "electron": "^19.0.9",
    "electron-builder": "^23.1.0",
    "esbuild": "^0.14.50",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.3.0",
    "less": "^4.1.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "rollup": "^2.78.1",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "unplugin-auto-import": "^0.11.1",
    "unplugin-vue-components": "^0.22.4",
    "vite": "^4.1.0",
    "vue-tsc": "^1.0.24"
  },
  "build": {
    "appId": "top.vanyi.music",
    "productName": "律动音乐",
    "extraResources": [
      {
        "from": "static/",
        "to": "static/"
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "static/logo.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis",
      "icon": "static/logo.ico"
    },
    "copyright": "Copyright © 2023 律动音乐",
    "files": [
      "output"
    ]
  }
}