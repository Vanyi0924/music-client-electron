{
  "name": "electron-vue3-template",
  "private": true,
  "version": "1.0.0",
  "main": "output/dist/main/main.js",
  "author": "vanyi",
  "description": "electron + vue3模板项目",
  "scripts": {
    "dev": "node scripts/load-config.mjs && npm run build:main:dev && node scripts/dev.mjs",
    "build": "node scripts/load-config.mjs && npm run build:main:prod && npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:main:dev": "cross-env NODE_ENV=development node scripts/build-main.mjs",
    "build:main:prod": "cross-env NODE_ENV=production node scripts/build-main.mjs",
    "build:electron": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^5.0.5",
    "fs-extra": "^10.1.0",
    "less": "^4.1.3",
    "lowdb": "1.0.0",
    "pinia": "^2.0.17",
    "vue": "^3.2.37",
    "vue-router": "4",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1",
    "workerpool": "^6.2.1"
  },
  "devDependencies": {
    "@types/lowdb": "^1.0.11",
    "@types/workerpool": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "cross-env": "^7.0.3",
    "electron": "^19.0.9",
    "electron-builder": "^23.1.0",
    "esbuild": "^0.14.50",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.3.0",
    "rollup": "^2.78.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.11.1",
    "unplugin-vue-components": "^0.22.4",
    "vite": "3.0.7",
    "vue-tsc": "^0.38.4"
  },
  "build": {
    "appId": "vy-id",
    "icon": "static/icon_512x512.png",
    "productName": "electron-vue3",
    "extraResources": [
      {
        "from": "static/",
        "to": "static/"
      }
    ],
    "mac": {
      "category": "vue3.electron.type"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis"
    },
    "copyright": "Copyright © 2022 VANYI",
    "files": [
      "output"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://xxx/electron-test"
      }
    ]
  }
}
